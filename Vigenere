#include <stdio.h>
#include <cs50.h>
#include <string.h>
#include <ctype.h>

int main(int argc, string argv[])
{
    string key = argv[1];
    //Перевірка коректності аргумннті
    if (argc != 2)
    {
        printf("Usage: ./caesar keyword\n");
        return 1;
    } 
    else
    {
        for (int i = 0; i < strlen(key); i++)
            if (!isalpha(key[i])) 
            {
                printf("Usage: ./caesar keyword\n");
                return 1;
            }
    }
    //Переведення з ASCII в цифри ключа
    int len = strlen(key); 
    int ark[len];
    for (int j = 0; j < len; ++j)
    {
        if (islower(key[j]))
        {
            ark[j] = (int)key[j] - 97;
        }
        else 
        {
            ark[j] = (int)key[j] - 65;
        }
       
    }
    //Шифрування
    string t = get_string("plaintext:  ");
    printf("ciphertext: ");
    char c;
    int count = -1;
    for (int i = 0; i < strlen(t); ++i)
    {
        c = t[i];
        if (isalpha(c))
        {
            count++;
            if (count == len)
            {
                count = 0;
            }
            if (isupper(c))
            {
                if (c + ark[count] > 90)
                {
                    while (c + ark[count] > 90)
                    {
                        c -= 26;
                    }
                    printf("%c", c + ark[count]); 
                } 
                else 
                {
                    printf("%c", c + ark[count]);   
                }
            } 
            else if (islower(c))
            {
                if (c + ark[count] > 122)
                {
                    while (c + ark[count] > 122)
                    {
                        c -= 26;
                    }
                    printf("%c", (c + ark[count]));
                } 
                else
                {
                    printf("%c", c + ark[count]); 
                }
            }
        }
        else 
        {
            printf("%c", c); 
        }
    } 
    printf("\n");
}
