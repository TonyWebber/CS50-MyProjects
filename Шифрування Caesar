#include <stdio.h>
#include <cs50.h>
#include <string.h>
#include <ctype.h>

int main(int argc, string argv[])
{
    string ar = argv[1];
    if (argc != 2)
    {
        printf("Usage: ./caesar key\n");
        return 1;
    } 
    else
    {
        for (int i = 0; i < strlen(ar); i++)
        {
            if (ar[i] < '0' || ar[i] > '9')
            {
                printf("Usage: ./caesar key\n");
                return 1;
            }
        }
    }
    int key = atoi(ar); 
    string t = get_string("plaintext:  ");
    printf("ciphertext: ");
    char c;
    for (int i = 0; i < strlen(t); ++i)
    {
        c = t[i];
        if (isalpha(c))
        {
            if (isupper(c))
            {
                if (c + key > 90)
                {
                    while (c + key > 90)
                    {
                        c -= 26;
                    }
                    printf("%c", c + key);
                } 
                else 
                {
                    printf("%c", c + key);
                }
            } 
            else if (islower(c))
            {
                {
                    if (c + key > 122)
                    {
                        while (c + key > 122)
                        {
                            c -= 26;
                        }
                        printf("%c", (c + key));
                    }
                
                else 
                {
                    printf("%c", c + key);
                }
            }
        }
        }
        else 
        {
            printf("%c", c);
        }    
    } 
    printf("\n");    
}
